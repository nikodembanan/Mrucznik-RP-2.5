#include <YSI\y_hooks>

//-----------------<[ Funkcje: ]>-------------------

hook OnPlayerDisconnect(playerid, reason)
{
    new player;
	for(new i = 0; i < Heist_AttackersCount; i++)
	{
		player = Heist_Attackers[i];
		if(player != -1)
        {
            if(player == playerid)
                Heist_Remove(i);
        }
    }
    if(IsValidDynamicMapIcon(Heist_Icons[playerid]))
		Heist_DestroyMapIcon(playerid);
}
//end

